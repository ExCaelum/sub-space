<div class="container-fluid">
  <div class="text-center">
    <div>
      <h1>Please Setup your Categories</h1>
      </div>
    <p>
      <%= link_to "Complete!", dashboard_path, class: "btn btn-success" %>
      <div class="row">
        <div class="col-md-2 col-md-offset-5">
          <div class="form-group">
            <input class="form-control" type="text" id="category-name">
            <input class="btn btn-default" id="create-category" type="button" name="submit" value="Create Category">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 text-center" id="categories">
        <h3>Categories</h3>
        <% @categories.each do |cat| %>
        <div class='category' data-post-id="<%= cat.id %>">
          <%= cat.name %>
          <div id="cat-badge-<%= cat.id %>"><%= cat.subscriptions.count %></div>
          <br><br>
        </div>
        <% end %>
      </div>
      <div class="col-md-4 col-md-offset-2" id="subscriptions">
        <h3>Subscriptions</h3>
        <% @subscriptions.each do |subscription| %>
          <div id="sub-<%= subscription.id %>">
            <div class='col-md-6 subscription' data-post-id="<%= subscription.channel_id%>">
              <%= link_to subscription.title, "https://www.youtube.com/channel/#{subscription.channel_id}", target: "_blank" %>
            </div>
            <div class="dropdown col-md-6">
              <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Categories
              </button>
              <div class="dropdown-menu" data-subscription-id="<%= subscription.id %>"  aria-labelledby="dropdownMenuButton" id="dropdowns">
                <% @categories.each do |cat| %>
                  <a class='dropdown-item category-option' data-category-id="<%= cat.id %>" href='#'> <%= cat.name %> </a><br>
                <% end %>
              </div>
              <br><br>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </p>
</div>
